  },
  "dependencies": {
    "@rspack/core": "1.4.10",
    "@next-rspack/binding": "workspace:*"
  },
  "devDependencies": {
    "@taplo/cli": "^0.7.0",
    "husky": "^9.0.0",
    "lint-staged": "^16.0.0"
  },
  "lint-staged": {
    "*.toml": "npx taplo format"
  }
}
